<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleCar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:id="@+id/carName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=""
        android:textSize="24sp"
        android:textStyle="bold" />
    <ImageButton
        android:id="@+id/singleCarImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/carimg2back"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/kmSingleCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=""/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Dati Auto"
        android:textSize="32dp"
        android:textStyle="bold"
        android:textColor="@color/traffic_black"
        android:layout_marginBottom="16dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:layout_marginBottom="4dp">


            <TextView
                android:id="@+id/kmFattiTextView"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="Km fatti:"
                android:textSize="20sp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/kmFatti"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:layout_marginBottom="4dp">


            <TextView
                android:id="@+id/consumoTextView"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="Consumo Km/l:"
                android:textSize="20sp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/consumo"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="169649"
                android:gravity=""/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:layout_marginBottom="4dp">


            <TextView
                android:id="@+id/kmRimanentiTextView"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="Km Rimanenti:"
                android:textSize="20sp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/kmRimanenti"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:layout_marginBottom="32dp">


            <TextView
                android:id="@+id/litriRimanentiTextView"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="Litri Rimanenti:"
                android:textSize="20sp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/lRimanenti"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""/>


        </LinearLayout>

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Elimina auto"
            />


    </LinearLayout>




</android.support.constraint.ConstraintLayout>