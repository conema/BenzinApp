<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mapquest.mapping.maps.MapView
            android:id="@+id/mapquestMapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:mapquest_app_key="KNdbV0JM4VyInvJk5GotMufjA5Lez6vW">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"></LinearLayout>
        </com.mapquest.mapping.maps.MapView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/currentPositionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@android:drawable/ic_menu_mylocation"
            android:tint="@color/mapbox_blue"
            app:backgroundTint="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/stationsScrollView"
            app:layout_constraintEnd_toEndOf="@id/mapquestMapView" />

        <!-- va settato visible/gone a seconda che venga mostrato oppure no -->
        <HorizontalScrollView
            android:id="@+id/stationsScrollView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="66dp"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/mapquestMapView"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/stationsLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.support.v7.widget.GridLayout
                    android:id="@+id/stationGridLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/TransparentGrey"
                    app:columnCount="2"
                    app:orientation="vertical"
                    app:rowCount="4">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_margin="4dp"
                        android:adjustViewBounds="true"
                        android:maxWidth="100dp"
                        android:maxHeight="100dp"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="1"
                        app:layout_gravity="top|left"
                        app:layout_row="0"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1"
                        app:srcCompat="@drawable/ic_eni_logo" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        app:layout_column="1"
                        app:layout_columnWeight="1"
                        app:layout_row="0"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/ic_star_black_24dp" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.2/5"
                                app:layout_columnWeight="1"
                                app:layout_rowWeight="1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tint="@color/traffic_black"
                                app:srcCompat="@drawable/ic_navigation_black_24dp" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3.4 km"
                                app:layout_columnWeight="1"
                                app:layout_rowWeight="1" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ENI"
                        android:textAlignment="center"
                        android:textSize="30sp"
                        app:layout_column="0"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="1"
                        app:layout_row="1"
                        app:layout_rowSpan="2"
                        app:layout_rowWeight="0" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.499â‚¬/L"
                        android:textSize="16sp"
                        app:layout_column="1"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="1"
                        app:layout_row="1"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prezzo"
                        app:layout_column="1"
                        app:layout_columnSpan="1"
                        app:layout_columnWeight="1"
                        app:layout_row="2"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1" />
                </android.support.v7.widget.GridLayout>
            </LinearLayout>
        </HorizontalScrollView>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
