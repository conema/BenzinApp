<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/border"
    android:clickable="true">

    <ImageView
        android:id="@+id/carImg"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/carNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_toRightOf="@+id/carImg"
        android:fontFamily="@font/montserrat_bold"
        android:text="Pandy"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/refreshButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_refresh_black_24dp" />

    <ImageView
        android:id="@+id/fuelIcon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_below="@id/carNome"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:layout_toRightOf="@id/carImg"
        android:src="@drawable/ic_fuel_station_pump" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_below="@id/carNome"
        android:layout_toRightOf="@id/fuelIcon"
        android:progress="20" />

    <TextView
        android:id="@+id/kmTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fuelIcon"
        android:layout_toRightOf="@id/carImg"
        android:fontFamily="@font/montserrat"
        android:text="Km rimanenti: 10"
        android:textStyle="bold" />
</RelativeLayout>